<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="titleText" format="string"/>
    <attr name="titleTextColor" format="color"/>
    <attr name="titleTextSize" format="dimension"/>
    <attr name="image" format="reference" />
    <attr name="imageScaleType">
        <enum name="fillXY" value="0" />
        <enum name="center" value="1" />
    </attr>


    <declare-styleable name="CustomTextView">
        <attr name="titleText"/>
        <attr name="titleTextColor"/>
        <attr name="titleTextSize"/>
    </declare-styleable>


    <declare-styleable name="CustomImageView">
        <attr name="titleText" />
        <attr name="titleTextSize" />
        <attr name="titleTextColor" />
        <attr name="image" />
        <attr name="imageScaleType" />
    </declare-styleable>



    <declare-styleable name="DragBubbleView">
        <attr name="bubbleRadius" format="dimension" />
        <attr name="bubbleColor" format="color" />
        <attr name="text" format="string" />
        <attr name="textSize" format="dimension" />
        <attr name="textColor" format="color" />
    </declare-styleable>

    <declare-styleable name="ExpandableBreathingButton">
        <attr name="ebbButtonText" format="string" />
        <attr name="ebbButtonTextSize" format="dimension" />
        <attr name="ebbButtonTextColor" format="color" />
        <attr name="ebbItemTextSize" format="dimension" />
        <attr name="ebbItemTextColor" format="color" />
        <attr name="ebbInnerCircleColor" format="color" />
        <attr name="ebbRectBackgroundColor" format="color" />
    </declare-styleable>
</resources>